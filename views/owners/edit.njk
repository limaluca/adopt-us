{% extends "layout.njk" %}



{% block content %}
    <div class="card">
        <section class="avatar" style="background-image:url({{dog.avatar_url}})"></section>
            <form method="POST" action="/dogs?_method=PUT">
                <section class="details">
                    <h3>Detalhes</h3>
                    {% include 'dogs/fields.njk' %}
                    <input type="hidden" name="id" value={{dog.id}}>
            </form>

            <form method="POST" action="/dogs?_method=DELETE">
                    <input type="hidden" name="id" value={{dog.id}}>
                    <button type="submit">Delete</button>
            </form>
        </section>
    </div>

    
{% endblock %}

