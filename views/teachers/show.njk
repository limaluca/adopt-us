{% extends "layout.njk" %}

{% block content %}


<div class ="card">

    <section class="avatar"  style= "background: url({{teacher.avatar_url}}) no-repeat center center / cover"></section>
    
    <section class="details">
        <h3>Detalhes</h3>
    
        <div class="item">
            <div>Nome</div>
            <div>{{teacher.name}}</div>
        </div>

        <div class="item">
            <div>Idade</div>
            <div>{{teacher.age}}</div>
        </div>

        <div class="item">
            <div>Grau de Escolaridade</div>
            <div>{{teacher.graduation}}</div>
        </div>      

        <div class="item">
            <div>Tipo da aula</div>
            <div>{{"Presencial" if teacher.modality == "p" else "Ã€ Distancia"}}</div>
        </div>  

        <div class="item">
            <div>Acompanhamento</div>
            <div>
                {%for discipline in teacher.disciplines%}
                <span>{{discipline}}</span>
                {% endfor %}
            </div>
        </div>     

        <div class="item">
            <div>Desde</div>
            <div>{{teacher.created_at}}</div>
        </div>   
        <div class="editButtons">
            <a href="/teachers/{{ teacher.id }}/edit" class="button">Editar</a>
        </div>
    </section>
</div>

{% endblock content %}
